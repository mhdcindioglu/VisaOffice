                            <li><i class="fas fa-check text-success me-2"></i>Work Experience Letters</li>
                            <li><i class="fas fa-check text-success me-2"></i>Business Documents</li>
                            <li><i class="fas fa-check text-success me-2"></i>Contracts</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-heart text-primary mb-3" style="font-size: 2.5rem;"></i>
                        <h5 class="fw-bold">Medical Documents</h5>
                        <ul class="list-unstyled text-start">
