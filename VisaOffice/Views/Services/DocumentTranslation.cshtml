    <!-- Pricing -->
    <div class="mb-5">
        <h2 class="text-center fw-bold mb-5">Translation Pricing</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th class="p-4">Service Type</th>
                                        <th class="p-4">Standard Rate</th>
                                        <th class="p-4">Express Rate</th>
                                        <th class="p-4">Turnaround</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="p-4"><strong>Standard Translation</strong><br><small class="text-muted">Per page</small></td>
                                        <td class="p-4"><span class="h5 text-success fw-bold">$25</span></td>
                                        <td class="p-4"><span class="h5 text-warning fw-bold">$45</span></td>
                                        <td class="p-4">2-3 days / Same day</td>
                                    </tr>
                                    <tr>
                                        <td class="p-4"><strong>Certified Translation</strong><br><small class="text-muted">Per page</small></td>
                                        <td class="p-4"><span class="h5 text-success fw-bold">$35</span></td>
                                        <td class="p-4"><span class="h5 text-warning fw-bold">$55</span></td>
                                        <td class="p-4">3-5 days / 1-2 days</td>
                                    </tr>
                                    <tr>
                                        <td class="p-4"><strong>Notarized Translation</strong><br><small class="text-muted">Per page</small></td>
                                        <td class="p-4"><span class="h5 text-success fw-bold">$45</span></td>
                                        <td class="p-4"><span class="h5 text-warning fw-bold">$65</span></td>
                                        <td class="p-4">3-5 days / 1-2 days</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Process -->
    <div class="mb-5">
        <h2 class="text-center fw-bold mb-5">Our Translation Process</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="fw-bold fs-4">1</span>
                    </div>
                    <h5 class="fw-bold">Submit Documents</h5>
                    <p class="text-muted">Upload or bring your documents to our office for review and quote.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <span class="fw-bold fs-4">2</span>
                    </div>
