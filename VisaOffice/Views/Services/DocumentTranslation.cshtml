    <!-- Service Overview -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-4">Certified Translation Services</h2>
            <p class="mb-4">Our team of certified professional translators provides accurate, legally recognized translations for all types of documents. We specialize in immigration documents and ensure compliance with all official requirements.</p>
            <div class="row">
                <div class="col-sm-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-certificate text-success me-3"></i>
                        <span>Certified & Notarized</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-clock text-success me-3"></i>
                        <span>24-48 Hour Turnaround</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-globe text-success me-3"></i>
                        <span>50+ Languages</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-shield-alt text-success me-3"></i>
                        <span>100% Accuracy Guarantee</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 text-center">
            <i class="fas fa-language text-primary" style="font-size: 8rem; opacity: 0.3;"></i>
