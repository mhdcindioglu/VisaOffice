@model List<VisaOffice.Models.ServiceOffice>
@{
    ViewData["Title"] = "Office Locations";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Our Office Locations</h1>
        <p class="lead text-muted">Visit us at any of our convenient locations for personalized service</p>
    </div>

    <!-- Office Cards -->
    <div class="row">
        @foreach (var office in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <i class="fas fa-building text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold text-center mb-3">@office.Name</h4>
                        
                        <div class="mb-3">
                            <h6 class="fw-bold text-primary"><i class="fas fa-map-marker-alt me-2"></i>Address</h6>
                            <p class="text-muted">@office.Address</p>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="fw-bold text-primary"><i class="fas fa-phone me-2"></i>Phone</h6>
                            <p class="text-muted">@office.Phone</p>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="fw-bold text-primary"><i class="fas fa-envelope me-2"></i>Email</h6>
                            <p class="text-muted">@office.Email</p>
                        </div>
                        
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary"><i class="fas fa-clock me-2"></i>Working Hours</h6>
                            <p class="text-muted">@office.WorkingHours</p>
                        </div>
                        
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary"><i class="fas fa-cogs me-2"></i>Services Available</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var service in office.Services)
                                {
                                    <span class="badge bg-light text-dark">@service</span>
                                }
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-controller="Services" asp-action="Appointments" class="btn btn-primary">
                                <i class="fas fa-calendar me-2"></i>Book Appointment
                            </a>
                            <a href="tel:@office.Phone.Replace(" ", "").Replace("(", "").Replace(")", "").Replace("-", "")" class="btn btn-outline-primary">
                                <i class="fas fa-phone me-2"></i>Call Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Map Section -->
    <div class="mt-5">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Find Us on the Map</h2>
            <p class="text-muted">Easily locate our offices for your convenience</p>
        </div>
        <div class="bg-light p-4 rounded text-center">
            <i class="fas fa-map text-primary mb-3" style="font-size: 4rem;"></i>
            <h5 class="fw-bold">Interactive Map</h5>
            <p class="text-muted">View detailed directions and nearby landmarks for all our locations</p>
            <button class="btn btn-primary">View Full Map</button>
        </div>
    </div>

    <!-- Contact Information -->
    <div class="mt-5">
        <div class="bg-primary text-white p-5 rounded">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-3">Need Directions or Have Questions?</h3>
                    <p class="lead mb-0">Our friendly staff is ready to help you find us and answer any questions you might have.</p>
                </div>
                <div class="col-lg-4 text-center">
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-light btn-lg">
                        <i class="fas fa-envelope me-2"></i>Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Transportation Information -->
    <div class="mt-5">
        <h3 class="text-center fw-bold mb-4">Transportation Options</h3>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-car text-primary mb-3" style="font-size: 2rem;"></i>
                        <h5 class="fw-bold">By Car</h5>
                        <p class="text-muted">Free parking available at all locations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-bus text-primary mb-3" style="font-size: 2rem;"></i>
                        <h5 class="fw-bold">Public Transit</h5>
                        <p class="text-muted">Convenient bus stops near all offices</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-subway text-primary mb-3" style="font-size: 2rem;"></i>
                        <h5 class="fw-bold">Metro</h5>
                        <p class="text-muted">Walking distance from metro stations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-taxi text-primary mb-3" style="font-size: 2rem;"></i>
                        <h5 class="fw-bold">Taxi/Rideshare</h5>
                        <p class="text-muted">Easy pickup and drop-off points</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
