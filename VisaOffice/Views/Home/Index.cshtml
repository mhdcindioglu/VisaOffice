@using Microsoft.Extensions.Localization
@model List<VisaOffice.Models.VisaType>
@{
    ViewData["Title"] = Resources.ProfessionalVisaServices;
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="hero-section-bgcolor"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">@Resources.ProfessionalVisaServices</h1>
                <p class="lead mb-4">@Resources.HeroDescription</p>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-controller="Visa" asp-action="Apply" class="btn btn-light btn-lg">
                        <i class="fas fa-plus me-2"></i>@Resources.ApplyForVisa
                    </a>
                    <a asp-controller="Visa" asp-action="TrackApplication" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>@Resources.TrackApplication
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Key Features -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-clock text-primary mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">@Resources.FastProcessing</h5>
                        <p class="card-text text-muted">@Resources.FastProcessingDesc</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-user-tie text-primary mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">@Resources.ExpertGuidance</h5>
                        <p class="card-text text-muted">@Resources.ExpertGuidanceDesc</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-shield-alt text-primary mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">@Resources.SecureProcess</h5>
                        <p class="card-text text-muted">@Resources.SecureProcessDesc</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Visa Types -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">@Resources.PopularVisaTypes</h2>
            <p class="lead text-muted">@Resources.ChooseFromWideRange</p>
        </div>
        <div class="row">
            @foreach (var visaType in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="@visaType.IconClass text-primary me-3" style="font-size: 2rem;"></i>
                                <h5 class="card-title mb-0">@visaType.Name</h5>
                            </div>
                            <p class="card-text text-muted mb-3">@visaType.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold">₺@visaType.Fee</span>
                                <small class="text-muted">@visaType.ProcessingTime</small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-4 pt-0">
                            <a asp-controller="Visa" asp-action="Apply" class="btn btn-outline-primary w-100">@Resources.ApplyNow</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Visa" asp-action="Types" class="btn btn-primary btn-lg">
                @Resources.ViewAllVisaTypes <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Statistics -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">10K+</h2>
                <p class="lead">@Resources.ApplicationsProcessed</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">95%</h2>
                <p class="lead">@Resources.SuccessRate</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">50+</h2>
                <p class="lead">@Resources.CountriesServed</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-4 fw-bold">24/7</h2>
                <p class="lead">@Resources.SupportAvailable</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="call-to-action py-5">
    <div class="call-to-action-bgcolor"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="fw-bold mb-3">@Resources.ReadyToStart</h3>
                <p class="lead text-muted mb-0">@Resources.GetExpertGuidance</p>
            </div>
            <div class="col-lg-4 text-end">
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary btn-lg me-3">
                    <i class="fas fa-phone me-2"></i>@Resources.ContactUs
                </a>
                <a asp-controller="Visa" asp-action="Apply" class="btn btn-primary btn-lg">
                    <i class="fas fa-rocket me-2"></i>@Resources.GetStarted
                </a>
            </div>
        </div>
    </div>
</section>
